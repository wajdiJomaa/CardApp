<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrueFalse"
    android:layout_marginTop="40dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="True False"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/TextWhite"
        android:textSize="26dp"
        />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statement"
        android:textColor="@color/TextWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/edStatement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/AquaBlue"
        android:textColor="@color/TextWhite"
        android:textColorHint="@color/AquaBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <RadioGroup
        android:id="@+id/rdTF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edStatement"
        android:textColor="@color/TextWhite"
        android:textColorHint="@color/AquaBlue"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:checkedButton="@id/True">

        <RadioButton
            android:id="@+id/True"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="True"
            android:textColor="@color/TextWhite"
            android:textColorHint="@color/AquaBlue"
            android:layout_marginRight="20dp"/>

        <RadioButton
            android:id="@+id/False"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="False"
            android:textColor="@color/TextWhite"
            android:textColorHint="@color/AquaBlue"/>
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>